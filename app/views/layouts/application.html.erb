<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <%= link_to 'My Blog', root_path, class: 'navbar-brand' %>
      <div class="navbar-collapse collapse" id="navbarColor01" style>
        <ul class="navbar-nav">
          <% if user_signed_in? %>
          <li class="nav-item"><%= link_to 'New Post', new_post_path , class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
          <% else %>
          <li class="nav-item"><%= link_to 'Login', new_user_session_path, class: 'nav-link' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="col-md-10 col-md-offset-1">
      <%= yield %>
    </div>
  </body>
</html>
